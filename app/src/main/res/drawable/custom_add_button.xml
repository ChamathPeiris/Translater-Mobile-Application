<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:startColor="#3f91c0"
                android:endColor="#4b9ace"
                android:angle="270"
                />
            <stroke
                android:width="1dp"
                android:color="#3f91c0"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"/>

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#3f91c0"/>
            <stroke
                android:width="1dp"
                android:color="#4b9ace"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"/>
        </shape>
    </item>
</selector>